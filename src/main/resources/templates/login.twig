{% extends "/templates/base.twig" %}

{% block content %}
<div class="container text-center">
	<h3>Login into Clinical Patient Records</h3>
	<hr>
	<form class="form-horizontal" method="POST" action="save-patient">
		<input type="hidden" name="id" value="{{ patient.id }}"/>
		<div class="form-group">
			<label class="control-label col-md-3">Email</label>
			<div class="col-md-7">
				<input type="text" class="form-control" name="email" value="{{ employe.email }}"/>
			</div>				
		</div>
		<div class="form-group">
			<label class="control-label col-md-3">Password</label>
			<div class="col-md-7">
				<input type="text" class="form-control" name="password" value="{{ employe.password }}"/>
			</div>									
		</div>
		<div class="form-group">
			<input type="submit" class="btn btn-primary" value="Login"/>
			{% if employe.email != employe.getEmail() and employe.password != employe.getPassword()}
			<p>Email or password are incorrect! Try again!</p>
			{% endif %}
		</div>
	</form>
</div>
{% endblock %}
